@{
    Layout = null;
    var context = HttpContext.Current;
    var request = context.Request;

    var username = request.Unvalidated.QueryString["username"];
}
<script src="~/Scripts/bootstrap.js"></script>
<link href="~/Content/bootstrap.css" rel="stylesheet" />
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<link href="~/Content/docs.css" rel="stylesheet" />
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title></title>
</head>
<body>
    <div>
        <h2>Ingrese la siguiente informacion</h2>
        <form class="form-inline" role="form" method="GET" action="ContactUs.cshtml">
            <div class="form-group">
                <label class="sr-only" for="exampleInputUsername">Usuario</label>
                <input type="text" class="form-control" id="exampleInputUsername" name="username" placeholder="Usuario" width="50px">
            </div>
            <button type="submit" class="btn btn-default">Enviar</button>
        </form>
    </div>
    <div class="highlight" id="message">Usuario : @Html.Raw(username)</div>
</body>
</html>
